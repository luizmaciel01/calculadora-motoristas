<script>
function toggleCalc(id) {
    const el = document.getElementById(id);
    el.style.display = (el.style.display === 'block') ? 'none' : 'block';
}

function formatar(valor) {
    return 'R$ ' + valor.toFixed(2).replace('.', ',');
}

// Fun√ß√£o de gr√°fico de barras simples
function desenharGrafico(canvasId, dados, cores, labels) {
    const canvas = document.getElementById(canvasId);
    const ctx = canvas.getContext('2d');
    const largura = canvas.width = canvas.offsetWidth;
    const altura = canvas.height = 200;
    const max = Math.max(...dados, 1);
    const barWidth = largura / (dados.length * 2);

    ctx.clearRect(0, 0, largura, altura);
    ctx.font = "14px Arial";
    ctx.textAlign = "center";

    dados.forEach((valor, i) => {
        const barHeight = (valor / max) * (altura - 40);
        const x = (i * barWidth * 2) + barWidth / 2;
        const y = altura - barHeight - 20;

        ctx.fillStyle = cores[i];
        ctx.fillRect(x, y, barWidth, barHeight);

        ctx.fillStyle = "#333";
        ctx.fillText(labels[i], x + barWidth / 2, altura - 5);
        ctx.fillText("R$" + valor.toFixed(2), x + barWidth / 2, y - 5);
    });
}

// 1Ô∏è‚É£ Lucro Di√°rio + Combust√≠vel
function calcularLucro() {
    const ganhos = parseFloat(document.getElementById('ganhosDia').value) || 0;
    const km = parseFloat(document.getElementById('kmRodados').value) || 0;
    const horas = parseFloat(document.getElementById('horasTrabalhadas').value) || 0;
    const consumo = parseFloat(document.getElementById('consumoMedio').value) || 12.8;
    const preco = parseFloat(document.getElementById('precoCombustivel').value) || 6;
    const aluguel = parseFloat(document.getElementById('aluguelCarro').value) || 0;

    const litrosGastos = km / consumo;
    const gastoCombustivel = litrosGastos * preco;
    const lucroLiquido = ganhos - gastoCombustivel - aluguel;
    const ganhoKm = km > 0 ? ganhos / km : 0;
    const ganhoHora = horas > 0 ? ganhos / horas : 0;

    document.getElementById('resultado1').innerHTML = `
        üí∞ <strong>Lucro l√≠quido:</strong> ${formatar(lucroLiquido)}<br>
        ‚õΩ <strong>Gasto com combust√≠vel:</strong> ${formatar(gastoCombustivel)}<br>
        üßÆ <strong>Litros gastos:</strong> ${litrosGastos.toFixed(2)} L<br>
        üìè <strong>Ganho por km:</strong> ${formatar(ganhoKm)}<br>
        ‚è∞ <strong>Ganho por hora:</strong> ${formatar(ganhoHora)}
    `;

    desenharGrafico("grafico1",
        [lucroLiquido, gastoCombustivel, aluguel],
        ["#6a0dad", "#009dff", "#8a2be2"],
        ["Lucro", "Combust√≠vel", "Aluguel"]);
}

// 2Ô∏è‚É£ M√©dia de Lucro por Hora
function calcularHora() {
    const ganhos = parseFloat(document.getElementById('ganhosTotais').value) || 0;
    const horas = parseFloat(document.getElementById('horasTotais').value) || 0;

    const ganhoHora = horas > 0 ? ganhos / horas : 0;
    const ganhoMin = ganhoHora / 60;

    document.getElementById('resultado2').innerHTML = `
        ‚è∞ <strong>Ganho por hora:</strong> ${formatar(ganhoHora)}<br>
        üïí <strong>Ganho por minuto:</strong> ${formatar(ganhoMin)}
    `;

    desenharGrafico("grafico2",
        [ganhoHora, ganhoMin * 60],
        ["#009dff", "#6a0dad"],
        ["Hora", "Minuto x60"]);
}

// 3Ô∏è‚É£ M√©dia Semanal/Mensal
function calcularMedia() {
    const lucro = parseFloat(document.getElementById('lucroTotal').value) || 0;
    const dias = parseFloat(document.getElementById('diasTrabalhados').value) || 0;

    const mediaDia = dias > 0 ? lucro / dias : 0;
    const mediaSemana = mediaDia * 7;
    const mediaMes = mediaDia * 30;

    document.getElementById('resultado3').innerHTML = `
        üìÖ <strong>M√©dia por dia:</strong> ${formatar(mediaDia)}<br>
        üìÜ <strong>M√©dia por semana:</strong> ${formatar(mediaSemana)}<br>
        üóìÔ∏è <strong>M√©dia por m√™s:</strong> ${formatar(mediaMes)}
    `;

    desenharGrafico("grafico3",
        [mediaDia, mediaSemana, mediaMes],
        ["#6a0dad", "#009dff", "#8a2be2"],
        ["Dia", "Semana", "M√™s"]);
}
</script>
